<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cloud="http://schema.cloudfoundry.org/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">

	<!-- Using the bean directly instead of cloud:data-source b/c there is no
		way to mock CloudEnvironment when using namespace -->
	<bean
		class="org.cloudfoundry.runtime.service.relational.CloudDataSourceFactory">
		<constructor-arg ref="test-cloudEnvironment" />
	</bean>

</beans>
